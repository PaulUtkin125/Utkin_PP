<Window x:Class="Utkin_PP.Windows.HrDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utkin_PP.Windows"
        mc:Ignorable="d"
        Title="Отдел кадров" Height="210" Width="490">
    <Grid>
        <StackPanel Margin="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фамилия"/>
                <TextBox x:Name="lastName_TextBox" Width="200" Margin="157.7 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 20">
                <TextBlock Text="Форма оплаты труда"/>
                <ComboBox x:Name="formOfRemuneration_ComboBox" Width="200" Margin="50 0 0 0" DisplayMemberPath="Name"/>
            </StackPanel>
            <Button Content="Добавить сотрудника" Width="250" Click="AddEmployee_Click"/>
        </StackPanel>
    </Grid>
</Window>
